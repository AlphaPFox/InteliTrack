<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.gov.dpf.intelitrack.trackers.SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/vwMainScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/vwLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="serif"
                        android:text="@string/lblObtainingIMEI"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="14sp"
                        android:typeface="monospace" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="8dp"
                        android:background="#644286f5">

                    </View>

                    <TextView
                        android:id="@+id/lblTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:fontFamily="serif"
                        android:text="@string/lblConnecting"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <br.gov.dpf.intelitrack.components.AnimatingProgressBar
                        android:id="@+id/pgrTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:progress="0" />

                    <Button
                        android:id="@+id/btnTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/btnTryAgain" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lblBasicConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="serif"
                        android:text="@string/lblBasicConfig"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="14sp"
                        android:typeface="monospace"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Configurações básicas" />

                    <View
                        android:id="@+id/splitter"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="#644286f5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblBasicConfig">

                    </View>

                    <TextView
                        android:id="@+id/lblTrackerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="serif"
                        android:labelFor="@+id/txtTrackerName"
                        android:text="@string/lblTrackerName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/splitter"
                        tools:text="Nome de identificação:" />

                    <TextView
                        android:id="@+id/lblDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="serif"
                        android:labelFor="@id/txtNoTrackerDescription"
                        android:text="@string/lblTrackerDescription"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblTrackerName" />

                    <EditText
                        android:id="@+id/txtTrackerName"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:ems="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/lblTrackerName"
                        app:layout_constraintTop_toBottomOf="@+id/splitter" />

                    <EditText
                        android:id="@+id/txtNoTrackerDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:ems="10"
                        android:hint="@string/txtTrackerDescriptionHint"
                        android:inputType="text"
                        android:textColor="#999"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/txtTrackerName"
                        app:layout_constraintTop_toBottomOf="@+id/lblTrackerName" />

            </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/vwModelCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblTrackerModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="serif"
                        android:text="@string/lblModel"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="14sp"
                        android:typeface="monospace" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="#644286f5" />

                    <HorizontalScrollView
                        android:id="@+id/vwModelScroll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_horizontal"
                        android:fadeScrollbars="false"
                        android:scrollbarSize="2dp">

                        <LinearLayout
                            android:id="@+id/vwModels"
                            android:layout_width="wrap_content"
                            android:layout_height="170dp"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="8dp">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:tag="tk102">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/border_blue"
                                    android:contentDescription="@string/lblModel"
                                    android:padding="6dp"
                                    android:src="@drawable/model_tk102" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="0.3"
                                    android:background="@drawable/border_blue"
                                    android:gravity="center"
                                    android:paddingEnd="8dp"
                                    android:paddingStart="8dp"
                                    android:text="@string/model_tk102"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:tag="tk103">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/border_blue"
                                    android:contentDescription="@string/lblModel"
                                    android:padding="6dp"
                                    android:src="@drawable/model_tk103" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="0.3"
                                    android:background="@drawable/border_blue"
                                    android:gravity="center"
                                    android:paddingEnd="8dp"
                                    android:paddingStart="8dp"
                                    android:text="@string/model_tk103"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:tag="tk306">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/border_blue"
                                    android:contentDescription="@string/lblModel"
                                    android:padding="6dp"
                                    android:src="@drawable/model_tk306" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="0.3"
                                    android:background="@drawable/border_blue"
                                    android:gravity="center"
                                    android:paddingEnd="8dp"
                                    android:paddingStart="8dp"
                                    android:text="@string/model_tk306"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:tag="st940">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/border_blue"
                                    android:contentDescription="@string/lblModel"
                                    android:padding="6dp"
                                    android:src="@drawable/model_st940" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="0.3"
                                    android:background="@drawable/border_blue"
                                    android:gravity="center"
                                    android:paddingEnd="8dp"
                                    android:paddingStart="8dp"
                                    android:text="@string/model_st940"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:tag="spot">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/border_blue"
                                    android:contentDescription="@string/lblModel"
                                    android:padding="6dp"
                                    android:src="@drawable/model_spot" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="0.3"
                                    android:background="@drawable/border_blue"
                                    android:gravity="center"
                                    android:paddingEnd="12dp"
                                    android:paddingStart="12dp"
                                    android:text="@string/model_spot"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:tag="pt39">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/border_blue"
                                    android:contentDescription="@string/lblModel"
                                    android:padding="6dp"
                                    android:src="@drawable/model_pt39" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="0.3"
                                    android:background="@drawable/border_blue"
                                    android:gravity="center"
                                    android:paddingEnd="8dp"
                                    android:paddingStart="8dp"
                                    android:text="@string/model_pt39"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:tag="pt50x">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/border_blue"
                                    android:contentDescription="@string/lblModel"
                                    android:padding="6dp"
                                    android:src="@drawable/model_pt50x" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="0.3"
                                    android:background="@drawable/border_blue"
                                    android:gravity="center"
                                    android:paddingEnd="8dp"
                                    android:paddingStart="8dp"
                                    android:text="@string/model_pt50x"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="serif"
                        android:text="@string/lblTrackerIdentification"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="14sp"
                        android:typeface="monospace" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="#644286f5" />

                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/vwPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:labelFor="@+id/txtPhoneNumber"
                                android:text="@string/lblPhoneNumber"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <EditText
                                android:id="@+id/txtPhoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:ems="10"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="@string/txtPhoneNumberHint"
                                android:inputType="phone"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vwIMEI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:labelFor="@+id/txtIMEI"
                                android:text="@string/lblTrackerIMEI"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <EditText
                                android:id="@+id/txtIMEI"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:ems="10"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="@string/txtIMEIHint"
                                android:inputType="phone"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vwFeedID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:labelFor="@+id/txtFeedID"
                                android:text="@string/lblFeedID"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <EditText
                                android:id="@+id/txtFeedID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:ems="10"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="@string/txtFeedIDHint"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vwPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:labelFor="@+id/txtPassword"
                                android:text="@string/lblPassword"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <EditText
                                android:id="@+id/txtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:ems="10"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:inputType="numberPassword"
                                android:hint="@string/txtPasswordHint"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vwNetwork"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:labelFor="@+id/txtNetwork"
                                android:text="@string/lblNetwork"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <EditText
                                android:id="@+id/txtNetwork"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:focusable="false"
                                android:inputType="none"
                                android:singleLine="true"
                                android:hint="@string/lblDefaultNetwork"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/lblSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/lblTKSubtitle"
                            android:textSize="12sp" />

                    </LinearLayout>

            </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="serif"
                    android:text="@string/lblColorIdentification"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="14sp"
                    android:typeface="monospace" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#644286f5" />

                <GridLayout
                    android:id="@+id/vwColors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:columnCount="8"
                    android:orientation="vertical"
                    android:rowCount="2">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:checked="false"
                        android:tag="#99ff0000"
                        app:buttonTint="#ff0000" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:checked="false"
                        app:buttonTint="#ff6200"
                        android:tag="#99ff6200" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:checked="false"
                        app:buttonTint="#e19d0a"
                        android:tag="#99e19d0a"/>

                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:checked="false"
                        app:buttonTint="#ffe600"
                        android:tag="#99ffe600" />

                    <android.support.v7.widget.AppCompatCheckBox
